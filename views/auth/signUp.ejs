<%- include('../includes/head.ejs') %>
    </head>
    <style>
        .invalid {
            border: 1px solid #c01616;
            border-radius: 4px;
        }
    </style>
    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <div class="container" style="margin-top: 10pc;">
                    <% if(errorMessage) { %>
                        <div style="color: brown;" class="alert alert-dark" role="alert">
                            <%= errorMessage %>
                        </div>
                    <% } %>
                    <form action="/signUp" method="POST" novalidate>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example1">User Name</label>
                            <input type="text" id="form2Example1" name="fullname" class="form-control" />
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example1">Email address</label>
                            <input type="email" 
                             class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid':''  %>"
                             id="form2Example1"
                             name="email" 
                             value="<%= oldInput.email %>" />
                        </div>

                        
                        <!-- Password input -->
                        <div class="form-outline mb-4 ">
                            <label class="form-label " for="form2Example2 ">Password</label>
                            <input type="password " id="form2Example2" name="password"                              
                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid':''  %>"
                            value="<%= oldInput.password %>" />
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4 ">
                            <label class="form-label " for="conformedPassword">Conformed Password</label>
                            <input type="password " id="conformedPassword" name="conformedPassword" 
                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid':''  %>"
                            value="<%= oldInput.conformedPassword %>" />
                        </div>

                        <br>
                        <!-- Submit button -->
                        <button type="submit " class="btn btn-primary btn-block mb-4 ">Sign Up</button>

                    </form>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>